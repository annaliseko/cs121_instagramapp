<h2>Edit Post</h2>

<%= form_for @post, html: { multipart: true } do |f| %>
	<%= f.label :image %>
	<br>
	<%= image_tag @post.image.url(:medium) %>
	<%= f.file_field :image %>
	<br>
	<%= f.label :description%>
	<br>


	<%= f.text_area :description %>
	<br>
	<%= f.submit%>
	<br>
	<br>
	<%= link_to "Delete Post |", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post? You cannot undo this action." } %>
	<%= link_to "Cancel", posts_path %>

<hr>

<% end %>
